<!DOCTYPE html>
<html lang="en">

<%- include('layout/header.html') %>

    <body id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">

            <%- include ('layout/sidebar.html') %>

                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content">
                        <%- include ('layout/topbar.html') %>
                            <!-- Page Content -->
                            <div class="container">

                                <!-- Portfolio Item Heading -->
                                <h1 class="my-4">
                                    <%= review.title %>
                                        <small>reviewd by <%= review.username %></small>
                                </h1>

                                <!-- Portfolio Item Row -->
                                <div class="row">

                                    <div class="col-md-8">
                                        <iframe width="560" height="315"
                                            src="https://www.youtube.com/embed/<%= review.musicUrl %>" frameborder="0"
                                            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                            allowfullscreen></iframe>
                                        <!-- <img class="img-fluid" src="http://placehold.it/750x500" alt=""> -->
                                    </div>

                                    <div class="col-md-4">
                                        <h3 class="my-3">리뷰내용</h3>
                                        <h4 class="my-3">
                                            <%= review.created %>
                                        </h4>
                                        <p>
                                            <%= review.content %>
                                        </p>

                                        <button type="button" class="btn btn-danger"
                                            onclick="location.href='/update/<%= review._id %>'" method="GET">수정</button>
                                        

                                    </div>

                                </div>
                                <!-- /.row -->

                            </div>
                            <!-- /.container -->
                    </div>
                    <!-- End of Main Content -->

                    <!-- Footer -->
                    <%- include ('layout/footer.html') %>
                        <!-- End of Footer -->

                </div>
                <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->
        <%- include ('layout/vendor.html') %>

    </body>

</html>